property newProxyConnectRef ${nuklei:newReferenceId()} # external scope
property statusCode ${http_cache:randomCacheableByDefaultStatusCode()} # shared property
property lastModified ${http_cache:date()} # shared property
property currentTime ${http_cache:datePlus(50)} # shared property
property compressedContent ${http_cache:gzip("hello world")}
property contentLength ${http_cache:lengthOf(compressedContent)}

connect await ROUTED_PROXY
        "nukleus://target/streams/http-cache"
        option nukleus:route ${newProxyConnectRef}
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:header(":scheme", "http")}
                        ${http:header(":method", "GET")}
                        ${http:header(":path", "/path")}
                        ${http:header(":authority", "localhost:8080")}
                        ${http:header("accept-encoding", "gzip")}
connected

write close

read nukleus:begin.ext ${http:header(":status", statusCode)}
                       ${http:header("content-length", contentLength)}
                       ${http:header("last-modified", lastModified)}
                       ${http:header("date", currentTime)}
                       ${http:header("content-encoding", "gzip")}

read ${compressedContent}

read closed
