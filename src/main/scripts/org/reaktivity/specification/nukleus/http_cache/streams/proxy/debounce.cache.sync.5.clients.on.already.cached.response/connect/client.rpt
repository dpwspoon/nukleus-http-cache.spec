property newProxyConnectRef ${nuklei:newReferenceId()} # external scope

connect await ROUTED_PROXY
        "nukleus://target/streams/http-cache"
        option nukleus:route ${newProxyConnectRef}
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:header(":scheme", "http")}
                        ${http:header(":method", "GET")}
                        ${http:header(":path", "/path")}
                        ${http:header(":authority", "localhost:8080")}


connected
write notify ACCEPT_CONNECT2_MADE # Assumed
write notify ACCEPT_CONNECT3_MADE # Assumed
write notify ACCEPT_CONNECT4_MADE # Assumed
write notify ACCEPT_CONNECT5_MADE # Assumed
write close

read nukleus:begin.ext ${http:header(":status", "200")}
                       ${http:header("content-length", "10")}
read "response 1"
read notify CACHED_RESPONSE_1
read closed

connect await CACHED_RESPONSE_1
        "nukleus://target/streams/http-cache"
        option nukleus:route ${newProxyConnectRef}
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:header(":scheme", "http")}
                        ${http:header(":method", "GET")}
                        ${http:header(":path", "/path")}
                        ${http:header(":authority", "localhost:8080")}


connected
write notify ACCEPT_CONNECT2_MADE # Assumed
write notify ACCEPT_CONNECT3_MADE # Assumed
write notify ACCEPT_CONNECT4_MADE # Assumed
write notify ACCEPT_CONNECT5_MADE # Assumed
write close

read nukleus:begin.ext ${http:header(":status", "200")}
                       ${http:header("content-length", "11")}
read "hello world"
read closed
