property newProxyAcceptRef ${nukleus:newRouteRef()} # external scope

accept await ROUTED_PROXY
        "nukleus://http-cache/streams/source"
        option nukleus:route ${newProxyAcceptRef}
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

accepted

read nukleus:begin.ext ${http:header(":scheme", "http")}
                       ${http:header(":method", "GET")}
                       ${http:header(":path", "/path")}
                       ${http:header(":authority", "localhost:8080")}
                       ${http:header("Authorization", "CLIENT_1")}
                       ${http:header("x-retry-after", "3")}
                       ${http:header("x-http-cache-sync", "always")}
                       ${http:header("x-poll-injected", "x-http-cache-sync, no-cache")}
                       ${http:header("cache-control", "no-cache")}

connected

read closed

write nukleus:begin.ext ${http:header(":status", "200")}
                        ${http:header("content-length", "17")}
                        ${http:header("cache-control", "stale-while-revalidate=2147483648")}

write flush

write nukleus:data.ext ${http:header(":scheme", "http")}
                       ${http:header(":method", "GET")}
                       ${http:header(":path", "/path")}
                       ${http:header(":authority", "localhost:8080")}
                       ${http:header("Authorization", "CLIENT_1")}
                       ${http:header("x-retry-after", "3")}
                       ${http:header("x-http-cache-sync", "always")}
                       ${http:header("x-poll-injected", "x-http-cache-sync, no-cache")}
                       ${http:header("cache-control", "no-cache")}

write "client 1 response"

write close


accepted

read nukleus:begin.ext ${http:header(":scheme", "http")}
                       ${http:header(":method", "GET")}
                       ${http:header(":path", "/path")}
                       ${http:header(":authority", "localhost:8080")}
                       ${http:header("Authorization", "CLIENT_2")}
                       ${http:header("x-retry-after", "3")}
                       ${http:header("x-http-cache-sync", "always")}
                       ${http:header("x-poll-injected", "x-http-cache-sync, no-cache")}
                       ${http:header("cache-control", "no-cache")}

connected

read closed

write nukleus:begin.ext ${http:header(":status", "200")}
                        ${http:header("content-length", "17")}
                        ${http:header("cache-control", "stale-while-revalidate=2147483648")}

write flush

write nukleus:data.ext ${http:header(":scheme", "http")}
                       ${http:header(":method", "GET")}
                       ${http:header(":path", "/path")}
                       ${http:header(":authority", "localhost:8080")}
                       ${http:header("Authorization", "CLIENT_2")}
                       ${http:header("x-retry-after", "3")}
                       ${http:header("x-http-cache-sync", "always")}
                       ${http:header("x-poll-injected", "x-http-cache-sync, no-cache")}
                       ${http:header("cache-control", "no-cache")}

write "client 2 response"

write close
